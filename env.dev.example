# FoodBuddy 로컬 개발 환경 설정
# 이 파일을 .env.dev로 복사해서 사용하세요

# Spring Boot 설정
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3307/yoriview_dev
SPRING_DATASOURCE_USERNAME=dev_user
SPRING_DATASOURCE_PASSWORD=dev_password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# JPA/Hibernate 설정
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect

# JWT 설정
JWT_SECRET=dev_jwt_secret_key_for_local_development_only_change_in_production
JWT_EXPIRATION=86400000

# MySQL 설정
MYSQL_ROOT_PASSWORD=dev_password
MYSQL_DATABASE=yoriview_dev
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_password

# Next.js 설정
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8081
NEXT_PUBLIC_APP_URL=http://localhost:3001

# 개발용 포트 설정
BACKEND_PORT=8081
FRONTEND_PORT=3001
MYSQL_PORT=3307

# 로그 레벨
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_VIBE_YORIVIEW=DEBUG

# 개발용 CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001 